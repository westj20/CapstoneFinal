<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auditbk"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goblin_one"
        android:text="Shine"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Question 17 -->
    <TextView
        android:id="@+id/questionQ17TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerTextView"
        android:layout_marginTop="30dp"
        android:text="Cleaning Schedule:\n\nIs there a regular cleaning schedule in place, outlining tasks and responsibilities for maintaining a clean and well-organized workspace?"
        android:textSize="20sp" />

    <!-- Radio Buttons -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="376dp"
        android:layout_height="111dp"
        android:layout_below="@+id/questionQ17TextView"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/yesQ17RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/noQ17RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/standardize4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView" />

</RelativeLayout>